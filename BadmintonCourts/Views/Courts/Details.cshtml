@model BadmintonCourts.Models.Court

@{
    ViewData["Title"] = "Court Details";
}

<h1 class="mb-4">Court Details</h1>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Court Information</h4>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CourtName)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CourtName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
            <dd class="col-sm-9">$@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Location)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Location.Addresss)</dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.CourtID" class="btn btn-warning me-2">
        <i class="bi bi-pencil-square me-1"></i>Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
    </a>
</div>
