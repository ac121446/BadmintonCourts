@{
    ViewData["Title"] = "Pricing";
}


<div class="container mt-5">
    <h1 class="text-center mb-2">Pricing</h1>
    <p class="text-center text-muted mb-5">
        Browse our current rates for court bookings, equipment rentals, and shuttlecock purchases. Affordable and flexible options for all your badminton needs.
    </p>

    <!--Court Booking and Racket Rental-->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow rounded-3 p-4">
                <img src="~/images/Bcourt2.jpg" class="card-img-top rounded mb-3" style="width:500px; height:380px; object-fit: contain;">
                <h4>Court Booking</h4>
                <p><strong>Price per Hour:</strong> $25.00</p>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow rounded-3 p-4">
                <img src="~/images/Bracket.jpg" class="card-img-top rounded mb-3" style="width:500px; height:380px; object-fit: contain;">
                <h4>Racket Rental</h4>
                <p><strong>Rental Price per Racket:</strong> $5.00</p>
            </div>
        </div>
    </div>

    <!--Shuttlecock Pricing-->
    <h4 class="text-center mt-5 mb-3">Shuttlecock Packs</h4>
    <div class="row mb-5">
        <div class="col-md-4">
            <div class="card shadow rounded-3 p-4 text-center">
                <img src="~/images/YonexShuttlecock.jpg" class="card-img-top rounded mb-3" style="width:300px; height:300px; object-fit: contain;">
                <h5>Yonex</h5>
                <p>12 Shuttlecocks per Pack</p>
                <p><strong>Price:</strong> $15.00</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow rounded-3 p-4 text-center">
                <img src="~/images/LiNingShuttlecock.jpg" class="card-img-top rounded mb-3" style="width:300px; height:300px; object-fit: contain;">
                <h5>Li-Ning</h5>
                <p>12 Shuttlecocks per Pack</p>
                <p><strong>Price:</strong> $25.00</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow rounded-3 p-4 text-center">
                <img src="~/images/VictorShuttlecock.jpg" class="card-img-top rounded mb-3" style="width:300px; height:300px; object-fit: contain;">
                <h5>Victor</h5>
                <p>12 Shuttlecocks per Pack</p>
                <p><strong>Price:</strong> $10.00</p>
            </div>
        </div>
    </div>
</div>
