@{
    ViewData["Title"] = "Home Page";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BadmintonCourts - Rent Courts and Equipment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ2Q9omj6vF7p65i7tw1y2RQvGly7s6gb0gT3NwvwKfw8zXJkUg1FQOefRo1" crossorigin="anonymous">
</head>

<section class="homebanner" style="background-image: url('/images/Bcourt.jpg');">
    <div class="homebanner-text">
        <h1 class="display-4 fw-bold">Welcome to SmashRentals</h1>
        <p class="lead">Your go-to destination for convenient and affordable badminton court and equipment rentals.</p>
        <a href="#booking" class="btn btn-success btn-lg mt-3">Book Now</a>
    </div>
</section>

<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>Welcome to Smash Rentals</h1>
                <p class="lead mt-3">Your go-to destination for convenient and affordable badminton court and equipment rentals.</p>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-12">
                <p>
                    Whether you're a beginner or a seasoned player, we make it easy to book courts, rent rackets, and reserve shuttlecocks online in just a few clicks. Perfect for casual games, tournaments, or team practice, SmashRentals helps you focus on the game while we take care of the rest. Game on!
                </p>

                <p class="mt-4">
                    Ready to play? <strong>Book your court and rent your equipment today with SmashRentals!</strong>
                </p>
            </div>
        </div>
    </div>
</body>

<div class="text-center mt-5">
    <p class="h2">Rent a court here</p>
</div>

<section id="booking">
<div class="d-flex justify-content-center align-items-center" style="height: 10vh;">
    <form asp-controller="Locations" asp-action="Index" method="get" class="d-flex">
        <div class="form-group d-flex align-items-center">
            <input type="text"
                   name="SearchString"
                   class="form-control"
                   style="width: 600px; height: 70px; font-size: 1.5rem;"
                   placeholder="Enter location"
                   value="@ViewData["CurrentFilter"]" />
            <input type="submit"
                   value="Search"
                   class="btn btn-primary ms-3"
                   style="height: 70px; font-size: 1.5rem; padding: 0 40px;" />
        </div>
    </form>
</div>
</section>

<style>
    html {
        scroll-behavior: smooth;
    }
</style>


