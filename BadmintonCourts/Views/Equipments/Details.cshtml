@model BadmintonCourts.Models.Equipment

@{
    ViewData["Title"] = "Equipment Details";
}

<h1 class="mb-4">Equipment Details</h1>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Equipment Information</h4>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EName)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.EName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EType)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.EType)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EPrice)</dt>
            <dd class="col-sm-9">$@Html.DisplayFor(model => model.EPrice)</dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.EquipmentID" class="btn btn-warning me-2">
        <i class="bi bi-pencil-square me-1"></i>Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
    </a>
</div>
