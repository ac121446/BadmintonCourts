@model BadmintonCourts.Models.Equipment

@{
    ViewData["Title"] = "Create Equipment";
}

<h1 class="text-center mt-5">@ViewData["Title"]</h1>

<div class="center-container">
    <div class="center-inner" style="max-width: 600px;">
        <!-- Wider container -->
        <form asp-action="Create" method="post">
            <h2 class="text-center mb-4">Enter equipment details</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="EName" class="form-control" placeholder="Equipment Name" />
                <label asp-for="EName">Equipment Name</label>
                <span asp-validation-for="EName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="EType" class="form-control" placeholder="Equipment Type" />
                <label asp-for="EType">Equipment Type</label>
                <span asp-validation-for="EType" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="EPrice" class="form-control" placeholder="Price" />
                <label asp-for="EPrice">Price ($)</label>
                <span asp-validation-for="EPrice" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="w-100 btn btn-lg btn-success">Create Equipment</button>
                <a asp-action="Index" class="w-100 btn btn-lg btn-secondary mt-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
