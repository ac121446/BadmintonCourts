@model BadmintonCourts.Models.Payment

@{
    ViewData["Title"] = "Delete Payment";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-2" style="font-size: 1.5rem;"></i>
            <h4 class="mb-0">Confirm Deletion</h4>
        </div>
        <div class="card-body">
            <p class="lead">Are you sure you want to delete this payment?</p>

            <dl class="row">
                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.PaymentAmount)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.PaymentAmount)</dd>

                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.PaymentDate)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.PaymentDate)</dd>

                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.PaymentStatus)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.PaymentStatus)</dd>

                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.Booking)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.Booking.BadmintonCourtsUserId)</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="PaymentID" />
                <div class="d-flex gap-3 justify-content-end mt-4">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash3 me-1"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
