<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BadmintonCourts</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BadmintonCourts.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                 <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/homeicon.png" alt="Logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="hover-underline-animation nav-link text-dark" asp-area="" asp-controller="Bookings" asp-action="Index">Bookings</a>
                            </li>   
                            <li class="nav-item">
                                <a class="hover-underline-animation nav-link text-dark" asp-area="" asp-controller="Locations" asp-action="Index">Locations</a>
                            </li>
                            <li class="nav-item">
                                <a class="hover-underline-animation nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Pricing">Pricing</a>
                            </li>
                             @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="hover-underline-animation nav-link text-dark" asp-area="" asp-controller="Courts" asp-action="Index">Courts</a>
                                </li>
                                <li class="nav-item">
                                    <a class="hover-underline-animation nav-link text-dark" asp-area="" asp-controller="Equipments" asp-action="Index">Equipments</a>
                                </li>
                                <li class="nav-item">
                                    <a class="hover-underline-animation nav-link text-dark" asp-area="" asp-controller="Payments" asp-action="Index">Payments</a>
                                </li>
                            }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="border-top: 1px solid #ccc;">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">

            <div class="mb-3 mb-md-0">
                <img src="~/images/homeicon.png" alt="Badminton Courts Logo" style="height: 60px;" />
            </div>

            <nav aria-label="Footer navigation" class="mb-3 mb-md-0">
                <ul class="list-inline mb-0">
                    <li class="list-inline-item mx-2">
                        <a href="/Home/Privacy" class="text-decoration-none">Privacy Policy</a>
                    </li>
                    <li class="list-inline-item mx-2">
                        <a href="/Home/Pricing" class="text-decoration-none">Pricing</a>
                    </li>
                    <li class="list-inline-item mx-2">
                        <a href="/Bookings/Index" class="text-decoration-none">Bookings</a>
                    </li>
                    <li class="list-inline-item mx-2">
                        <a href="/Locations/Index" class="text-decoration-none">Locations</a>
                    </li>
                </ul>
            </nav>

            <div class="text-center text-md-end" style="margin-top: 2rem;">
                <h5>Contact Us</h5>
                <address class="mb-0">
                    <a href="mailto:ac121446@avcol.school.nz" class="text-decoration-none">ac121446@avcol.school.nz</a><br />
                    +64 021-12345678<br />
                    51 Victor Street<br />
                    Auckland, 1026
                </address>
            </div>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

