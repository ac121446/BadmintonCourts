@using System.Security.Claims
@model BadmintonCourts.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<h1 class="text-center mt-5">@ViewData["Title"]</h1>

<div class="center-container">
    <div class="center-inner" style="max-width: 900px;">

        <form asp-action="Create" method="post">
            <h2 class="text-center mb-4">Enter booking details</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="row g-3">
                @if (User.IsInRole("Admin"))
                {
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="BadmintonCourtsUserId" class="form-select" asp-items="ViewBag.BadmintonCourtsUserId"></select>
                            <label asp-for="BadmintonCourtsUserId">User</label>
                        </div>
                    </div>
                }

                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="CourtID" class="form-select" asp-items="ViewBag.CourtID"></select>
                        <label asp-for="CourtID">Court</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="EquipmentID" class="form-select" asp-items="ViewBag.EquipmentID"></select>
                        <label asp-for="EquipmentID">Equipment</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="BookingDate" class="form-control" type="date" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" />
                        <label asp-for="BookingDate">Booking Date</label>
                        <span asp-validation-for="BookingDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="StartTime" class="form-control" type="time" />
                        <label asp-for="StartTime">Start Time</label>
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="EndTime" class="form-control" type="time" />
                        <label asp-for="EndTime">End Time</label>
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="TotalPrice" class="form-control"  />
                        <label asp-for="TotalPrice">Total Price ($)</label>
                        <span asp-validation-for="TotalPrice" class="text-danger"></span>
                    </div>
                </div>
            </div>

            @if (!User.IsInRole("Admin"))
            {
                <input type="hidden" asp-for="BadmintonCourtsUserId" value="@User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier)" />
            }

            <div class="mt-4">
                <button type="submit" class="w-100 btn btn-lg btn-success">Create Booking</button>
                <a asp-action="Index" class="w-100 btn btn-lg btn-secondary mt-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
