@model PaginatedList<BadmintonCourts.Models.Booking>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h1 class="text-center mb-2">Bookings</h1>
    <p class="text-center text-muted mb-5">
        Check your current bookings here.
    </p>
</div>

@if (User.IsInRole("Admin"))
{
<form asp-action="Index" method="get" class="mb-4 d-flex flex-column gap-3">


    <div class="d-flex input-group input-group-lg" style="min-width: 300px;">
        <input type="text" name="SearchString" value="@(ViewData["CurrentFilter"] ?? "")" class="form-control" placeholder="Search bookings by name..." aria-label="Search courts" />
        <button type="submit" class="btn btn-primary">Search</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Reset</a>
    </div>


    <!--Sorting buttons and Create New-->
    <div class="d-flex align-items-center justify-content-between">
        <div>
            <input type="hidden" name="SearchString" value="@(ViewData["CurrentFilter"] ?? "")" />

            <div class="btn-group btn-group-lg me-3" role="group" aria-label="Booking date sorting">
                <button type="submit" name="sortOrder" value="date_asc" class="btn btn-outline-primary @(ViewData["CurrentSort"]?.ToString() == "date_asc" ? "active" : "")">
                    Date ↑
                </button>
                <button type="submit" name="sortOrder" value="date_desc" class="btn btn-outline-primary @(ViewData["CurrentSort"]?.ToString() == "date_desc" ? "active" : "")">
                    Date ↓
                </button>
            </div>
        </div>

        <div>
                <a class="btn btn-success btn-lg" asp-action="Create">Create New</a>
        </div>

    </div>

</form>
}

@if (!Model.Any() && !string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
{
    <div class="alert alert-warning" role="alert">
        No results found for first name "@ViewData["CurrentFilter"]".
    </div>
}
else
{
    <div class="row row-cols-1 g-3">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-md-12">
                            <div class="card-body">
                                <div class="row gy-3">
                                    <div class="col-4">
                                        <div><small class="fw-bold">Booking Date</small></div>
                                        <div class="text">@item.BookingDate.ToShortDateString()</div>
                                    </div>
                                    <div class="col-4">
                                        <div><small class="fw-bold">Time Slot</small></div>
                                        <div class="text">
                                            @item.StartTime.ToString("h:mm tt") - @item.EndTime.ToString("h:mm tt")
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div><small class="fw-bold">Court</small></div>
                                        <div class="text">@item.Court.CourtName</div>
                                    </div>
                                </div>

                                <div class="row gy-3 mt-3">
                                    <div class="col-4">
                                        <div><small class="fw-bold">Total Price</small></div>
                                        <div class="fw-bold text-success">$@item.TotalPrice.ToString("F2")</div>
                                    </div>
                                    <div class="col-4">
                                        <div><small class="fw-bold">User</small></div>
                                        <div class="text">@item.BadmintonCourtsUser.FirstName</div>
                                    </div>
                                    <div class="col-4">
                                        <div><small class="fw-bold">Equipment</small></div>
                                        <div class="text">@(item.Equipment?.EName ?? "No equipment")</div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <!--Crud buttons-->
                     <div class="card-body d-flex justify-content-start">
                        <div class="mt-auto">
                            @if (User.IsInRole("Admin"))
                            {
                            <a asp-action="Edit" asp-route-id="@item.BookingID" class="btn btn-warning btn-sm ms-1" title="Edit">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            }
                            <a asp-action="Delete" asp-route-id="@item.BookingID" class="btn btn-danger btn-sm ms-1" title="Delete">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                            <a asp-action="Details" asp-route-id="@item.BookingID" class="btn btn-info btn-sm ms-1" title="Details">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>



}
@if (!Model.Any())
{
    <div class="alert alert-warning" role="alert">
        You currently have no bookings. Create a new booking by selecting "Book" in the <a asp-action="Index" asp-controller="Locations">Locations page</a> under your desired location.
    </div>
}

@if (Model.Any())
{
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-searchString="@(ViewData["CurrentFilter"] ?? "")">Previous</a>
            </li>
            <li class="page-item disabled">
                <span class="page-link">
                    Page @Model.PageIndex of @Model.TotalPages
                </span>
            </li>
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-searchString="@(ViewData["CurrentFilter"] ?? "")">Next</a>
            </li>
        </ul>
    </nav>
}